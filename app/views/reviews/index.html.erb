<div class="container">
     <div class="border">
          <h2 class="card_title"><%= @room.name %></h2>

          <% if user_signed_in? %>
                    <%= link_to room_bookmarks_path(current_user, room_id: @room.id), method: :post do %>
                         <p class="bookmark"><i class="far fa-bookmark"></i>&nbsp;ブックマークに追加</p>
                    <% end %>
          <% end %>

          <div class="card_inner">
               <div class="w_50"><%= image_tag @room.image if @room.image.attached? %></div>
               <div class="w_50">
                    <div class="star_review">
                         <div class="star-rating">
                              <div class="star-rating-front" style="width: <%= @room.review_score_percentage %>%">★★★★★</div>
                              <div class="star-rating-back">★★★★★</div>
                         </div>
                         <div class="average-score-display">
                              <%= @room.avg_score %>点
                              (<%= @room.reviews.count %>件のレビュー)
                         </div>
                    </div>

                     <p class="roomfee">&yen;<%= @room.price.try(:to_s, :delimited) %>&nbsp;-&nbsp;&yen;<%= @room.maxprice.try(:to_s, :delimited) %><span class="utilities">(光熱費込)</span></p>
                      <%=simple_format(@room.description, class: 'desc') %>
                     <%= render 'tag_list', tag_list: @room.tag_list %>

                    <p class="link_buttons">

                    <%= link_to "レビューを書く", room_path(@room), class: "button link_button" %>
                    </p>
               </div>
          </div>
     </div>
     <div class="average-score-display">
         <%= @room.avg_score %>点(<%= @room.reviews.count %>件のレビュー)
     </div>

     <div class="grid_table">
          <div class="grid_ttl">ユーザー名</div>
          <div class="grid_ttl">点数</div>
          <div class="grid_ttl">内容</div>
          <div class="grid_ttl"></div>

          <% @reviews.each do |review| %>
               <div class="border_layout"><%= link_to review.user.username, user_path(review.user) %></div>
               <div class="border_layout"><%= review.score %></div>
               <div class="border_layout"><%= review.comment %></div>
               <div class="border_layout favorites">
                    <% if current_user.favorites?(review) %>
                         <%= link_to room_review_favorites_path(room_id: @room.id, review_id: review.id), method: :delete do%>
                         <i class="fa fa-heart"></i>
                         <% end %>
                    <% else %>
                         <%= link_to room_review_favorites_path(room_id: @room.id, review_id: review.id), method: :post do%>
                         <i class="far fa-heart"></i>
                         <% end %>
                    <% end %>
                    <%= review.favorites.count %>
               </div>
          <% end %>
     </div>
     <div class="pagination">
          <p class="mt20"><%= paginate @reviews %></p>
          <p class="mt20"><%= page_entries_info @reviews, entry_name: 'レビュー' %></p>
     </div>
</div>