<h3>コメント</h3>
<% @review.comments.each do |comment| %>
  <div>
    <strong><%= comment.name %></strong><br />
    <p><%= comment.body %></p>

    <% if comment.persisted? %>
      <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
    <% end %>
  </div>
<% end %>

<%= render 'comments/form' %>
