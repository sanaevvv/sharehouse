<div class="container">
     <div class="border">
          <h2 class="card_title"><%= @room.name %></h2>
          <div class="card_inner">
               <div class="w_50"><img src="<%= room_image_url(@room) %>" alt="<%= @room.name %>のプロフィール画像" /></div>
               <div class="w_50">
                    <div class="star_review">
                         <div class="star-rating">
                              <div class="star-rating-front" style="width: <%= @room.review_score_percentage %>%">★★★★★</div>
                              <div class="star-rating-back">★★★★★</div>
                         </div>
                         <div class="average-score-display">
                              <%= @room.avg_score %>点（<%= @room.reviews.count %>件のレビュー）
                         </div>
                    </div>

                    <p class="roomfee">&yen;<%= @room&.price.to_s(:delimited) %>&nbsp;-&nbsp;&yen;<%= @room.maxprice.try(:to_s, :delimited) %><span class="utilities">(光熱費込)</span></p>
                    <p class="description"><%= @room.description %></p>

                    <p class="link_buttons">
                    <%= link_to "一覧へ戻る", rooms_path, class: "button" %>
                    <%= link_to "レビューを見る", room_reviews_path(@room), class: "link_button" %>
                    </p>
               </div>
          </div>
     </div>
</div>

<%= render 'reviews/form', review: @review, room: @room %>
