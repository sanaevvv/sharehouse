
<h2 class="m_50 main_ttl"><i class="far fa-comments"></i>&nbsp;レビューを自由に</h2>
<% if user_signed_in? %>
<div class="circle_parts">
  <p class="welcome">Welcome!</p>
  <ul>
    <li class="circle1">
      どんな部屋？
    </li>
    <li class="circle2">
      仲良くなれる？
    </li>
    <li class="circle3">
      治安は？
    </li>
    <li class="circle4">
     住人はどんな人？
    </li>
    <li class="circle5">
     住人の交流は？
    </li>
  </ul>
</div>

 <% else %>
    <div class="login_gr">
      <%= link_to "ログイン", new_user_session_path, class: "login btn_link" %>
      <%= link_to "新規登録", new_user_registration_path, class: "new btn_link" %>
    </div>
    <!-- Slider main container -->
    <div class="swiper-container">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
            <!-- Slides -->
            <% @rooms.each do |room| %>
              <div class="swiper-slide"><img src="<%= room_image_url(room) %>" alt="" /></div>
            <% end %>
        </div>
    </div>
     <!-- If we need pagination -->
        <div class="swiper-pagination"></div>
<% end %>

<script data-turbolinks-eval="false">
  var swiper = new Swiper('.swiper-container', {
    effect: 'coverflow',
    centeredSlides: true,
    slidesPerView: 'auto',
    coverflowEffect: {
      rotate: 50,
      stretch: 0,
      depth: 100,
      modifier: 1,
      slideShadows: true,
    },
    loop: true,
    speed: 1000,
    autoplay: {
      delay: 300,
    },
    // If we need pagination
    pagination: {
      el: '.swiper-pagination',
    },
  });

</script>
