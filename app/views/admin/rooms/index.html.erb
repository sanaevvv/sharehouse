<p class="sharehouse_search">
          <i class="fas fa-home"></i>&nbsp;シェアハウスを探す
</p>

<div class="search_box">
          <%= search_form_for @q, class:"search" do |f| %>
               <%= f.search_field :name_cont, placeholder: '検索するテキストを入力...' %>
               <%= f.submit "検索", class: 'link_button'%>
          <% end %>
</div>

<% @rooms.each do |room| %>
     <div class="border">
          <h2 class="card_title"><%= room.name %></h2>
          <div class="card_inner">
               <div class="w_50">
                    <img src="<%= room_image_url(room) %>" alt="" />
               </div>
               <div class="w_50">
                    <div class="star_review">
                         <div class="star-rating">
                              <div class="star-rating-front" style="width: <%= room.review_score_percentage %>%">★★★★★</div>
                              <div class="star-rating-back">★★★★★</div>
                         </div>
                         <div class="average-score-display">
                              <%= room.avg_score %>点（<%= room.reviews.count %>件のレビュー）
                         </div>
                    </div>

                    <p class="roomfee">&yen;<%= room.price.try(:to_s, :delimited) %>&nbsp;-&nbsp;&yen;<%= room.maxprice.try(:to_s, :delimited) %><span class="utilities">(光熱費込)</span></p>
                   <%=simple_format(room.description, class: 'desc') %>

                   <%= render 'tag_list', tag_list: room.tag_list %>

                    <p class="link_buttons">
                    <%= link_to "編集する", edit_admin_room_path(room), class: "button" %>
                    <%= link_to "削除する", [:admin, room], method: :delete,data:{confirm: "#{room.name}を削除します。よろしいですか？"}, class: "button link_button" %>
                    </p>
               </div>
          </div>
     </div>
<% end %>

<div class="pagination">
     <%= paginate @rooms %>
     <%= page_entries_info @rooms %>
</div>
