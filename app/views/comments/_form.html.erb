<div class="form_container">

  <%= form_with model: model, url: url, local: true do |f| %>

  <div class="field">
  <%= f.label :body, '内容' %><br>
  <%= f.text_area :body %>
  </div>

  <%= f.hidden_field :review_id, value: review.id %>

  <div>
  <%= f.submit '登録する', class:"button" %>
  <%= link_to 'レビューに戻る', room_reviews_path, class:"link_button" %>
  </div>

  <% end %>

</div>
