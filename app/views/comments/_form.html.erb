<div class="form_container">

  <%= form_with model: model, url: url, local: true do |f| %>

  <div class="field">
  <%= f.label :body, '内容' %><br>
  <%= f.text_area :body %>
  </div>

  <%= f.hidden_field :review_id, value: review.id %>

  <div class="comment_button_gr">
  <%= f.submit '登録する', class:"card_button1" %>
  <%= link_to 'レビュー一覧に戻る', room_reviews_path, class:"card_button2 mt30" %>
  </div>

  <% end %>

</div>
